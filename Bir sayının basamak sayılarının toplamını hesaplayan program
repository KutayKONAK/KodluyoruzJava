import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        int k=0,n;
        int result=0;

        Scanner input = new Scanner(System.in);
        System.out.print("Lütfen basamak toplamı alınıcak sayıyı giriniz : ");
        n=input.nextInt();
      while (n!=0){
          result += (n%10);
          n=n/10;
          k++;
      }
      System.out.println(k+" basamaklı bir sayıdır. ");
      System.out.println(result);

      }
    }
