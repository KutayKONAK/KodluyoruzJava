import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        int r,angle;
        double pi=3.14,area;



        //Kullanıcıdan verileri alma
        Scanner input = new Scanner(System.in);
        System.out.print("Yarıçap değeri giriniz: ");
        r=input.nextInt();
        Scanner giris = new Scanner(System.in);
        System.out.print("Açı değeri giriniz: ");
        angle=giris.nextInt();
        area=(pi * (r*r) * angle) / 360 ;

        System.out.print("Daire parçasının alanı: " + area);
    }
}
