import java.util.Scanner;

class Main {
    static Scanner input = new Scanner(System.in);
    public static void main(String[] args) {
        int k,j=0;
        int total=0;
        do {
            System.out.print("SayÄ± giriniz:");
            k= input.nextInt();
            if(k%2==0){
             total +=k;
            }
        }
       while (k%2==0);
        System.out.println("Toplam="+total);


    }
}
